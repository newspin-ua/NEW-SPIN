<script>
/* ===== DATA ===== */
let coins=0,totalClicks=0,clickPower=1,clickUpgradePrice=5000;
let inventory=[],autoclicker=false,xp=0,level=0;
let autoInterval=null,spent=0;

/* ===== NAV ===== */
function show(id){
document.querySelectorAll(".screen").forEach(s=>s.classList.remove("active"));
document.getElementById(id).classList.add("active");
}

/* ===== CLICK ===== */
function clickChicken(){
coins+=clickPower;
totalClicks++;
xp++;
if(xp>=100){xp=0;level=Math.min(level+1,20000);}
update(); save();
}

/* ===== UPDATE UI ===== */
function update(){
document.getElementById("coins").innerText=coins;
document.getElementById("total-clicks").innerText=totalClicks;
document.getElementById("click-upgrade-price")?.innerText=clickUpgradePrice;
document.getElementById("level-profile")?.innerText=level;
document.getElementById("xpBar").style.width=(xp)+"%";
document.getElementById("inv-list").innerHTML=inventory.length?inventory.join("<br>"):"ĞŸĞ¾Ñ€Ğ¾Ğ¶Ğ½ÑŒĞ¾";
}

/* ===== SHOP ===== */
function buyItem(name,price){
if(coins<price){alert("âŒ ĞœĞ°Ğ»Ğ¾ ĞºĞ¾Ñ—Ğ½Ñ–Ğ²!"); return;}
coins-=price;
spent+=price;
inventory.push(name);
update(); save();
alert("âœ… ĞšÑƒĞ¿Ğ»ĞµĞ½Ğ¾: "+name);
}
function buyAutoclicker(){
if(autoclicker){alert("ğŸ¤– ĞĞ²Ñ‚Ğ¾ĞºĞ»Ñ–ĞºĞµÑ€ Ğ²Ğ¶Ğµ Ğ°ĞºÑ‚Ğ¸Ğ²Ğ½Ğ¸Ğ¹!"); return;}
if(coins<10000){alert("âŒ ĞœĞ°Ğ»Ğ¾ ĞºĞ¾Ñ—Ğ½Ñ–Ğ²!"); return;}
coins-=10000;
spent+=10000;
autoclicker=true;
startAutoclicker();
update(); save();
alert("âœ… ĞšÑƒĞ¿Ğ»ĞµĞ½Ğ¾ ĞĞ²Ñ‚Ğ¾ĞºĞ»Ñ–ĞºĞµÑ€!");
}
function startAutoclicker(){
if(autoInterval) return;
autoInterval=setInterval(()=>{coins+=clickPower; xp++; if(xp>=100){xp=0;level=Math.min(level+1,20000);} update(); save();},1000);
}
function upgradeClick(){
if(coins<clickUpgradePrice){alert("âŒ ĞœĞ°Ğ»Ğ¾ ĞºĞ¾Ñ—Ğ½Ñ–Ğ²!"); return;}
coins-=clickUpgradePrice; spent+=clickUpgradePrice;
clickPower++;
clickUpgradePrice=Math.floor(clickUpgradePrice*1.5);
update(); save();
alert("âš¡ï¸ ĞšĞ»Ñ–Ğº Ğ¿Ğ¾ÑĞ¸Ğ»ĞµĞ½Ğ¾! +1");
}

/* ===== CASE ===== */
function openCase(){
if(coins<1000000){alert("âŒ ĞœĞ°Ğ»Ğ¾ ĞºĞ¾Ñ–Ğ½Ñ–Ğ²!"); return;}
coins-=1000000; spent+=1000000;
let r=Math.random()*100;
let reward="";
if(r<55){reward="ğŸ”¥ Ğ’Ğ¾Ğ³Ğ½ĞµĞ¼ĞµÑ‚";inventory.push(reward);}
else if(r<65){coins+=10000000;reward="ğŸ’° 10 000 000";}
else if(r<85){coins+=100000;reward="ğŸ’° 100 000";}
else if(r<95){reward="âš”ï¸ ĞœĞµÑ‡";inventory.push(reward);}
else{coins+=80000;reward="ğŸ« ĞŸĞ ĞĞœĞ S23BN";}
document.getElementById("caseResult").innerText=reward;
update(); save();
}

/* ===== SAVE/LOAD ===== */
function save(){localStorage.setItem("chickenSave",JSON.stringify({coins,totalClicks,clickPower,clickUpgradePrice,inventory,autoclicker,xp,level,spent}));}
function load(){let s=JSON.parse(localStorage.getItem("chickenSave")"{}");coins=s.coins0;totalClicks=s.totalClicks0;clickPower=s.clickPower1;clickUpgradePrice=s.clickUpgradePrice5000;inventory=s.inventory[];autoclicker=s.autoclickerfalse;xp=s.xp0;level=s.level0;spent=s.spent0;if(autoclicker)startAutoclicker();update();}
load();

/* ===== RESET ===== */
function resetGame(){if(confirm("Ğ¢Ğ¾Ñ‡Ğ½Ğ¾ ÑĞºĞ¸Ğ½ÑƒÑ‚Ğ¸ Ğ’Ğ¡Ğ•?")){localStorage.clear(); location.reload();}}

/* ===== EXPORT/IMPORT ===== */
function exportSave(){const blob=new Blob([localStorage.getItem("chickenSave")],{type:"application/json"});const a=document.createElement("a");a.href=URL.createObjectURL(blob);a.download="chicken_clicker_save.json";a.click();}
function importSave(file){const reader=new FileReader();reader.onload=()=>{localStorage.setItem("chickenSave",reader.result);load();alert("âœ… Ğ¡ĞµĞ¹Ğ² Ñ–Ğ¼Ğ¿Ğ¾Ñ€Ñ‚Ğ¾Ğ²Ğ°Ğ½Ğ¾");};reader.readAsText(file);}
</script>

